<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.DynamicFragmentExampleActivity">

    <TextView android:text="Dynamically add and remove fragments using add(), replace() and remove() methods of fragment transaction" android:layout_width="wrap_content"
        android:id="@+id/text"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_below="@id/text"
        android:id="@+id/_placeholder1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </FrameLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/_placeholder1"
        android:id="@+id/line"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#27006e" />
    <FrameLayout
        android:id="@+id/_placeholder2"
        android:layout_below="@id/line"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F2"
        android:id="@+id/button4"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F3"
        android:id="@+id/button5"
        android:layout_above="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F4"
        android:id="@+id/button6"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Fragment"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F2"
        android:id="@+id/button8"
        android:layout_above="@+id/button9"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/button10" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F3"
        android:id="@+id/button9"
        android:layout_above="@+id/button10"
        android:layout_alignStart="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add F4"
        android:id="@+id/button10"
        android:layout_above="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button11" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Fragment"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
