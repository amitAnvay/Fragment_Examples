<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andridlearning.amit_gupta.fragments.fragmentCommunication.FragmentCommunication">

    <TextView android:text="Two Fragments Communicate between themselves via the Activity. The activity implements the interface defined in the fragments" android:layout_width="wrap_content"
        android:id="@+id/text1"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment1"
        android:name="com.andridlearning.amit_gupta.fragments.fragmentCommunication.Fragment1"
        android:layout_below="@id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/fragment1"
        android:id="@+id/line"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="#27006e" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.andridlearning.amit_gupta.fragments.fragmentCommunication.Fragment2"
        android:layout_width="fill_parent"
        android:layout_below="@+id/line"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
